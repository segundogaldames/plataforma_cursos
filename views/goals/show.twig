{% extends "layout/admin/template.twig" %}
{% block title %}
	{{options.title}}
{% endblock %}

{% block content %}
	{% include 'layout/admin/header_content.twig' %}
	<div class="container-fluid">
		{% include "partials/_messages.twig" %}
		<div class="card">
			<div class="card-header">
				{{options.subject}}
			</div>
			<div class="card-body">
                <div class="col-md-6">
                    <table class="table table-hover">
                        <tr>
                            <th>Nombre:</th>
                            <td> {{goal.name}} </td>
                        </tr>
                        <tr>
                            <th>Curso:</th>
                            <td> {{goal.course.title}} </td>
                        </tr>
                        <tr>
                            <th>Creado:</th>
                            <td> {{goal.created_at|date('d-m-Y H:i:s')}} </td>
                        </tr>
                        <tr>
                            <th>Creado:</th>
                            <td> {{goal.updated_at|date('d-m-Y H:i:s')}} </td>
                        </tr>
                    </table>
                    <p>
                        <a href="{{BASE}}{{options.back.link}}" class="btn btn-primary btn-sm">{{options.back.name}}</a>
                        <a href="{{BASE}}goals/edit/{{goal.id}}" class="btn btn-warning btn-sm">Editar</a>
                    </p>
                    <p>
                        <form method="post" action="{{BASE}}goals/delete/{{goal.id}}">
                            <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                        </form>
                    </p>
                </div>
			</div>
		</div>
	</div>
	<!-- /.container-fluid -->
{% endblock %}
